@model MyFirstAspNetCoreApplication.ViewModels.Home.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

@for (int i = 0; i < 10; i++)
{
    <p>@i</p>
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1>
    <h2>It is @Model.Year year.</h2>
    <p>@Model.Description</p>
    <p>We have @Model.UsersCount users.</p>
    <p>Processor count: @Model.ProcessorCount</p>
    <p>Time: @DateTime.Now</p>
    <p>Id: @Model.Id</p>
</div>