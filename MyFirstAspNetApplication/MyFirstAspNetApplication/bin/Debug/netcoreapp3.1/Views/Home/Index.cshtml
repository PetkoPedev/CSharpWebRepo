@using MyFirstAspNetApplication.ViewModels.Home
@using MyFirstAspNetApplication.Service;
@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
    this.Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1>
    <h2>It is @Model.Year year.</h2>
    <p>@Model.Description</p>
    <p>We have @Model.UsersCount users.</p>
    <p>Processor count: @Model.ProcessorCount</p>
    <p>Time: @DateTime.Now</p>
    <p>Id: @Model.Id</p>
</div>


@section Links {
    <li class="nav-item">
        <a class="nav-link text-dark" href="https://google.com">Google</a>
    </li>
}